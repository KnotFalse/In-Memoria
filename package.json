{
  "name": "in-memoria",
  "version": "0.1.0",
  "description": "Persistent intelligence infrastructure for agentic development",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "in-memoria": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "schemas",
    "*.node",
    "rust-core/*.node"
  ],
  "scripts": {
    "build": "tsc && npm run build:rust && npm run copy-assets",
    "copy-assets": "cp src/storage/schema.sql dist/storage/",
    "build:rust": "cd rust-core && napi build --platform --release",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js server",
    "prepublishOnly": "npm run build",
    "debug": "npx @modelcontextprotocol/inspector node dist/index.js server"
  },
  "keywords": [
    "ai",
    "code-analysis",
    "mcp",
    "intelligent-tools",
    "developer-assistant"
  ],
  "author": "Piyush Airani",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0 <22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@surrealdb/node": "^1.0.0-beta.3",
    "better-sqlite3": "^8.7.0",
    "chokidar": "^3.5.3",
    "eventemitter3": "^5.0.1",
    "glob": "^11.0.3",
    "nanoid": "^5.0.0",
    "surrealdb": "^1.3.2",
    "tree-sitter": "^0.21.1",
    "tree-sitter-javascript": "^0.21.4",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-rust": "^0.21.0",
    "tree-sitter-typescript": "^0.21.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.16.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
