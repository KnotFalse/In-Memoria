{
  "name": "in-memoria",
  "version": "0.2.1",
  "description": "Persistent intelligence infrastructure for agentic development",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "in-memoria": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "schemas",
    "rust-core/index.js",
    "rust-core/index.d.ts",
    "rust-core/*.node",
    "rust-core/package.json"
  ],
  "scripts": {
    "build": "tsc && npm run build:rust && npm run copy-assets",
    "copy-assets": "cp src/storage/schema.sql dist/storage/",
    "build:rust": "cd rust-core && napi build --platform --release",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js server",
    "prepublishOnly": "npm run build",
    "postinstall": "npm rebuild better-sqlite3 || echo 'Note: better-sqlite3 rebuild failed, but this might still work'",
    "debug": "npx @modelcontextprotocol/inspector node dist/index.js server"
  },
  "keywords": [
    "ai",
    "code-analysis",
    "mcp",
    "intelligent-tools",
    "developer-assistant"
  ],
  "author": "Piyush Airani",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@surrealdb/node": "^1.0.0-beta.3",
    "better-sqlite3": "^12.2.0",
    "chokidar": "^4.0.3",
    "eventemitter3": "^5.0.1",
    "glob": "^11.0.3",
    "nanoid": "^5.1.5",
    "surrealdb": "^1.3.2",
    "tree-sitter": "^0.21.1",
    "tree-sitter-javascript": "^0.21.4",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-rust": "^0.21.0",
    "tree-sitter-typescript": "^0.21.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.1.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}